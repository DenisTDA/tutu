<p id="notice"><%= notice %></p>

<h1>Пассажиры</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Фамилия</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.name %></td>
        <td><%= passenger.lastname %></td>
        <td><%= link_to 'Показать', passenger %></td>
        <td><%= link_to 'Редактировать', edit_passenger_path(passenger) %></td>
        <td><%= link_to 'Удалить', passenger, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать нового пассажира', new_passenger_path %>
