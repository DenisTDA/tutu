<%= form_for ticket do |f| %>
  <%= render 'common/errors', resource: ticket %>

  <div class="field">
    <%= f.label :user_id, 'Имя пользователя' %>
    <%= f.collection_select :user_id, User.all, :id, :lastname %>
  </div>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number, id: :ticket_number %>
  </div>

  <div class="field">
    <%= f.label :passenger_name, 'Введите Фамилию Имя (Отчество)' %>
    <%= f.text_field :passenger_name %>
  </div>

  <div class="field">
    <%= f.label :passport_number, 'Паспорта' %>
    <%= f.text_field :passport %>
  </div>

  <%= f.hidden_field :train_id, value: params[:train_id] %>
  <%= f.hidden_field :start_station_id, value: params[:start_station_id] %>
  <%= f.hidden_field :end_station_id, value: params[:end_station_id] %>
  
  <div class="actions">
    <%= f.submit "#{ticket.new_record? ? 'Сохранить' : 'Изменить' }" %>
  </div>
<% end %>

