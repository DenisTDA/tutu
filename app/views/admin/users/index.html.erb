<p id="notice"><%= notice %></p>

<h1>Пассажиры</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Фамилия</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= link_to 'Показать', [:admin, user] %></td>
        <td><%= link_to 'Редактировать', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Удалить', [:admin, user], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать нового пассажира', new_admin_user_path %> |
