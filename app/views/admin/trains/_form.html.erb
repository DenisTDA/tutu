<%= form_with(model: [:admin, train], local: true) do |form| %>
  <%= render 'common/errors',  resource: train %>
   


  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :train_number %>
  </div>

  <div class="field">
    <%= form.label :route_id %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :sort_direct, 'по возростанию' %>
    <%= form.radio_button(:sort_direct, "true") %>
  </div>
  <div class="field">
    <%= form.label :sort_reverse, 'по убыванию' %>
    <%= form.radio_button(:sort_direct, "false") %>
  </div>

  <div class="actions">
    <%= form.submit "#{ @train.new_record? ? 'Создать' : 'Изменить' }"%>
  </div>
  
<% end %>
