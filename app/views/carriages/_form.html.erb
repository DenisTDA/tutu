<%= form_with(model: carriage, local: true) do |form| %>
  <%= render 'common/errors',  resource: carriage %>

 <div class="field">
    <%= form.label :@carriage_number, 'Порядковый номер' %>
    <%=  carriage.number %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, [ ['СВ', 'SvCarriage'], ['Купейный', 'CupeCarriage'],
      ['Плацкарный','EconomyCarriage'], ['Сидячие места', 'SeatsCarriage'] ]%>
  </div>

  
  <div class="field">
    <%= form.label :top_place, 'Верх. места' %>
    <%= form.number_field :top_place %>
  </div>
   <div class="field">
    <%= form.label :bottom_place, 'Ниж. места' %>
    <%= form.text_field :bottom_place, id: :carriage_bottom_place %>
  </div>
   <div class="field">
    <%= form.label :side_top_place, 'Верх. боковые места' %>
    <%= form.text_field :side_top_place, id: :carriag_top_place %>
  </div>
  <div class="field">
    <%= form.label :side_bottom_place, 'Ниж. боковые места' %>
    <%= form.text_field :side_bottom_place, id: :carriage_bottom_place %>
  </div>
   <div class="field">
    <%= form.label :seats_place, 'Сид. места' %>
    <%= form.text_field :seats_place, id: :carriage_seats_place %>
  </div>


  <div class="field">
    <%= form.label :train_id, 'Включить в поезд' %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="actions">
    <%= form.submit "#{@carriage.new_record? ? 'Сохранить' : 'Изменить' }" %>
  </div>

<% end %>