<%= form_for train_carriage_url do |f| %>
  <%= render 'common/errors', resource: @carriage %>
  
  <div class="field">
    <%= f.label :train, "Поезд" %>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>  

  <div class="field">
    <%= f.label :type, 'Тип' %>
    <%= f.select :type, [['Плацкартный', 'EconomyCarriage'], ['Купейный' ,'CompartCarriage'], ['СВ', 'SvCarriage'], ['Сидячий', 'SeatsCarriage']] %>
  </div>

  <div class="field">
    <%= f.label :top, 'Количество верхних мест' %>
    <%= f.number_field :top %>
  </div>

  <div class="field">
    <%= f.label :bottom, 'Количество нижних мест' %>
    <%= f.number_field :bottom %>
  </div>

  <div class="field">
    <%= f.label :side_bottom, 'Количество нижних боковых мест' %>
    <%= f.number_field :side_bottom %>
  </div>

  <div class="field">
    <%= f.label :side_top, 'Количество верхних боковых мест' %>
    <%= f.number_field :side_top %>
  </div>

  <div class="field">
    <%= f.label :seats_place, 'Количество сидячих мест' %>
    <%= f.number_field :seats_place %>
  </div>    

  <div class="actions">
    <%= f.submit "#{ @carriage.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>