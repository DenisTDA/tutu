<%= form_for route do |form| %>
   <%= render 'common/errors',  resource: route %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :route_name %>
  </div>

   <div class="field">
    <%= form.label :railway_station_ids, 'Добавить станцию' %>
    <%= form.collection_select :railway_station_ids, RailwayStation.all, :id, :title , {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit "#{route.new_record? ? 'Сохранить' : 'Изменить' }" %>
  </div>
<% end %>