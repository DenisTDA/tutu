<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong> Вагоны </strong>
  <ul>
  <% if @train.carriages.any? %>
     <% @train.order_car.each do |carriage| %>
       <li> <%= link_to "#{carriage.number} - #{carriage.type}", carriage_path(carriage) %></li>
     <%end%>

 <% else %>
    Вагоны отсутствуют
  <% end %>
</ul>
</p>
<p>
  <strong> Маршрут </strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Маршрут не назначен
  <% end %>
</p>
<%= link_to 'Edit', edit_train_path(@train) %> 
<%= link_to 'Back', trains_path %>